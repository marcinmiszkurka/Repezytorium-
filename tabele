#include <stdio.h>
#include <conio.h>
int main()
{
	const char ciag_zn[20] = "Ala ma kota";
	int histogram[26] = {0};
	char znak;
	int licznik = 0;
	int x;
	while (ciag_zn[licznik] != 0){
		znak = ciag_zn[licznik];
		if ((znak >= 'a') && (znak <= 'z')){
		
			histogram[znak - 'a'];
			
		}
		++licznik;
		
	}
		// alternatywnie petla for zamiast while
//	for(int licznik =0; ciag_zn[licznik] !=0; ++licznik){
//	}
	for (x = 0; x < 26; ++x)
		{
			printf("%c -> %d,\n", 'a' + x, histogram[x]);
		}

	return 0;
	
	}
