#include <stdio.h>
#include <stdlib.h>

void odszyfruj (int wybor, int[]);
void zaszyfruj (int wybor, int[]);

int main()

{
    int ile;
    int wybor;

    int stat[128];
    
    printf("######################################\n");
    printf("#            SZYFR CEZARA            #\n");
    printf("#         WSPOL ssinf2017 gr I       #\n");
    printf("#           Marcin Miszkurka         #\n");
    printf("######################################\n\n");

    printf("\t1 aby zaszyfrowa\206 tekst\n\t0 aby odszyfrowa\206: \n\t\t ");
    scanf("%d",&wybor);
    printf ("\to ile przesuni\251cie ?:\n\t\t" , ile);
    scanf("%d",&ile);

    while(getchar() != '\n');
    if (wybor == 1)
	zaszyfruj(ile, stat);
    else if (wybor == 0)
	odszyfruj(ile, stat);
    return 0;

}


void odszyfruj(int ile, int stat[])
{
    char ch;
    int i;
    printf("\tPodaj text do dekodowania:\n\t " );
    ch = getchar();
    while(ch != '\n')
    {
        putchar(ch - ile);
	ch = getchar();
    
    }
    printf("\n");
}

void zaszyfruj(int ile, int stat[])
{
    char ch;
    int i;
    printf("\tPodaj tekst do zaszyfrowania:\n\t");
    ch = getchar();
    while(ch != '\n')
    {
        putchar(ch + ile);
        ch = getchar();
    
    }
    printf("\n");
    

}
